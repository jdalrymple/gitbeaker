{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": false,
    "esModuleInterop": true,
    "declaration": false,
    "outDir": "dist/latest"
  },
  "include": [
    "src/**/*",
    "test/tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}